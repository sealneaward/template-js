div(class="row")
    div(class="col s12")
        div(class="card purple")
            div(class="card-content")
                span(class="card-title white-text") Player Statistics
                div(class="row")
                    div(class="input-field col s6")
                        input(disabled, value=players[0].PLAYER_NAME, id="name", type="text", class="white-text")
                        label(for="name", class="white-text") Name
                    div(class="input-field col s6")
                        input(disabled, value=players[0].BLK, id="blocks", type="text", class="white-text")
                        label(for="blocks", class="white-text") Blocks
                    div(class="input-field col s6")
                        input(disabled, value=players[0].DEF_RIM_FGA, id="drfga", type="text", class="white-text")
                        label(for="name", class="white-text") Defensive Shots Against At Rim Attempted
                    div(class="input-field col s6")
                        input(disabled, value=players[0].DEF_RIM_FGM, id="drfgm", type="text", class="white-text")
                        label(for="blocks", class="white-text") Defensive Shots Against At Rim Made
                    div(class="input-field col s6")
                        input(disabled, value=players[0].DEF_RIM_FG_PCT, id="drfgpct", type="text", class="white-text")
                        label(for="name", class="white-text") Defensive Shots Against At Rim Percentage

script.
    $('#player_select').on('change', function () {
        var selectedValue = $(this).find('option:selected').attr('id');
        var playerStats = !{JSON.stringify(players)};


        //get player info from array by player id
        var player = $.grep(playerStats, function(player){
           return player.PLAYER_ID == selectedValue;
        })[0];

        $('#name').val(player.PLAYER_NAME);
        $('#blocks').val(player.BLK);
        $('#drfga').val(player.DEF_RIM_FGA);
        $('#drfgm').val(player.DEF_RIM_FGM);
        $('#drfgpct').val(player.DEF_RIM_FG_PCT);

    });